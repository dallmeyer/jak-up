    ;; Draw info to the screen
    ;; (draw-deload-continue-info)
    (speedrun-draw-settings)

    (when (cpad-hold? 0 l2)
      (cond 
        ((cpad-pressed? 0 left)
          (format 0 "~S -> " (enum->string hud-collectable-view *hud-collectable-view*))
          (set! *hud-collectable-view* 
            (the hud-collectable-view
              (mod 
                (+ *hud-collectable-view* (- (hud-collectable-view max) 1))
                (hud-collectable-view max)
                )
              )
            )
          (format 0 "~S ~% " (enum->string hud-collectable-view *hud-collectable-view*))
