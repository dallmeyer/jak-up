(defun speedrun-start-full-game-run ()
  ;; start a full game speedrun, save file is already selected so don't default to first slot
  (start-speedrun (speedrun-category full-game))
  (none))

(defun speedrun-target-state-toggle-continue? ()
  (case (-> *target* state)
    ((target-stance target-wade-stance target-swim-stance target-flut-stance target-racing target-hit-ground target-edge-grab target-duck-stance)
      #t
      )
    (else
      #f
      )
    )
  )

(defun speedrun-target-grounded? ()
  (logtest? (-> *target* control status) (cshape-moving-flags onsurf))
  )

(defun speedrun-draw-settings ()
  "Draw speedrun related settings in the bottom left corner"
  (when (and (-> *pc-settings* speedrunner-mode?)
             (not (paused?))
             *target*
             (!= (-> *target* current-level name) 'title)
            ;;  (-> *speedrun-info* should-display?)
             )
    (with-dma-buffer-add-bucket ((buf (-> (current-frame) global-buf))
                                      (bucket-id subtitle))
      ;; print checkpoint info
      (cond
        ((-> *tmp-continue-point* lev0)
          ;; player has set a checkpoint
          (cond
            ((speedrun-target-state-toggle-continue?)
              (cond
                ((or (= (-> *jakup-info* next-checkpoint-time) #f) 
                     (<= (-> *jakup-info* next-checkpoint-time) (current-time)))
                  (draw-string-xy (string-format "~1LL2 + Up to go to checkpoint ~%L2 + Down to set new checkpoint")
                                  buf 2 (- 222 (* 8 2)) 
                                  (font-color default) 
                                  (font-flags shadow kerning))
                  )
                (else
                  (draw-string-xy (string-format "~1LL2 + Up to go to checkpoint ~%~2LNext checkpoint available in ~Ds" (/ (- (-> *jakup-info* next-checkpoint-time) (current-time)) TICKS_PER_SECOND))
                                  buf 2 (- 222 (* 8 2)) (font-color default) (font-flags shadow kerning))
                  )
                )
              )
            (else
              (cond
                ((or (= (-> *jakup-info* next-checkpoint-time) #f)
                     (<= (-> *jakup-info* next-checkpoint-time) (current-time)))
                  (draw-string-xy (string-format "~2LL2 + Up to go to checkpoint ~%L2 + Down to set new checkpoint")
                                  buf 2 (- 222 (* 8 2)) 
                                  (font-color default) 
                                  (font-flags shadow kerning))
                  )
                (else
                  (draw-string-xy (string-format "~2LL2 + Up to go to checkpoint ~%Next checkpoint available in ~Ds" (/ (- (-> *jakup-info* next-checkpoint-time) (current-time)) TICKS_PER_SECOND))
                                  buf 2 (- 222 (* 8 2)) (font-color default) (font-flags shadow kerning))
                  )
                )
              )
            )
          )
        (else
          ;; player hasn't set a checkpoint yet
            (cond 
              ((or (= (-> *jakup-info* next-checkpoint-time) #f)
                   (<= (-> *jakup-info* next-checkpoint-time) (current-time)))
                (cond
                  ((speedrun-target-state-toggle-continue?)
                    (draw-string-xy "~1LL2 + Down to set new checkpoint"
                                    buf 2 (- 222 (* 8 1)) (font-color default) (font-flags shadow kerning))
                    )
                  (else
                    (draw-string-xy "~2LL2 + Down to set new checkpoint"
                                    buf 2 (- 222 (* 8 1)) (font-color default) (font-flags shadow kerning))
                    )
                  )
                )
              (else
                (draw-string-xy (string-format "Next checkpoint available in ~Ds" (/ (- (-> *jakup-info* next-checkpoint-time) (current-time)) TICKS_PER_SECOND))
                                buf 2 (- 222 (* 8 1)) (font-color default) (font-flags shadow kerning))
                )
              )
          )
        )

      ;; check/print fall info
      (let ((fall-dist (- (-> *jakup-info* last-grounded-height) (-> *target* root trans y))))
        (cond 
          ((speedrun-target-grounded?)
            (set! (-> *jakup-info* last-grounded-height) (-> *target* root trans y))
            )
          (else
            (when (> fall-dist (-> *jakup-info* worst-fall))
              (set! (-> *jakup-info* worst-fall) fall-dist)
              )
            )
          )
        (cond 
          ((and (> (-> *jakup-info* worst-fall) (meters 1)) 
                (< (fabs (- (-> *jakup-info* worst-fall) fall-dist)) (meters 1)))
            (draw-string-xy (string-format "~7LWorst fall: ~5dm" (the int (/ (-> *jakup-info* worst-fall) METER_LENGTH)))
                                buf 510 (- 222 (* 8 3)) (font-color default) (font-flags right shadow kerning))
            )
          (else
            (draw-string-xy (string-format "Worst fall: ~5dm" (the int (/ (-> *jakup-info* worst-fall) METER_LENGTH)))
                                buf 510 (- 222 (* 8 3)) (font-color default) (font-flags right shadow kerning))            
            )
          )
        )
      
      ;; check/print height info
      (cond
        ((< (fabs (- (-> *jakup-info* best-height) (-> *target* root trans y))) (meters 5))
          (set! (-> *jakup-info* best-height) (max (-> *jakup-info* best-height) (-> *target* root trans y)))
          (draw-string-xy (string-format "~3LBest height: ~5dm~%Current height: ~5dm" (the int (/ (-> *jakup-info* best-height) METER_LENGTH)) (the int (/ (-> *target* root trans y) METER_LENGTH)))
                                buf 510 (- 222 (* 8 2)) (font-color default) (font-flags right shadow kerning))
          )
        (else
          (set! (-> *jakup-info* best-height) (max (-> *jakup-info* best-height) (-> *target* root trans y)))
          (draw-string-xy (string-format "Best height: ~5dm~%Current height: ~5dm" (the int (/ (-> *jakup-info* best-height) METER_LENGTH)) (the int (/ (-> *target* root trans y) METER_LENGTH)))
                                buf 510 (- 222 (* 8 2)) (font-color default) (font-flags right shadow kerning))
          )
        )

      ;; check for camera toggle
      (when (or (and (not *debug-segment*) (cpad-pressed? 0 r3))
                (and *debug-segment* (cpad-pressed? 0 l3))
                )
        (set! (-> *jakup-info* cam)
          (the jakup-cam
            (mod 
              (+ (-> *jakup-info* cam) 1)
              (jakup-cam max)
              )
            )
          )
        (case (-> *jakup-info* cam)
          (((jakup-cam wide-no-collide))
            (send-event *camera* 'change-state cam-stick 0)
            (send-event *camera* 'set-slave-option (cam-slave-options COLLIDE) #f)
            )
          (((jakup-cam locked))
            (send-event *camera* 'change-state cam-lookat 0)
            ;; (send-event *camera* 'set-slave-option (cam-slave-options COLLIDE) #f)
            )
          (else ;; ((jakup-cam original))
            (send-event *camera* 'change-state *camera-base-mode* 0)
            (send-event *camera* 'set-slave-option (cam-slave-options COLLIDE) #t)
            )
          )
        )
      ;; print camera info if not original
      (let ((cam-button (if *debug-segment* "L3" "R3")))
        (case (-> *jakup-info* cam)
          (((jakup-cam wide-no-collide))
            (draw-string-xy (string-format "wide camera (~S to toggle)" cam-button)
                                buf 255 5 (font-color default) (font-flags middle shadow kerning))
            )
          (((jakup-cam locked))
            (draw-string-xy (string-format "locked camera (~S to toggle)" cam-button)
                                buf 255 5 (font-color default) (font-flags middle shadow kerning))
            )
          (else ;; ((jakup-cam original))
            ;; print nothing
            )
          )
        )
      )
    )
  (none))

